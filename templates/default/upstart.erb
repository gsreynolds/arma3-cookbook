description "<%=@params[:app_name]%>"


start on filesystem or runlevel [2345]
stop on runlevel [!2345]

console log
umask 022
setuid <%=node['steamcmd']['user']%>
setgid <%=node['steamcmd']['group']%>

exec <%=node['steamcmd']['apps_dir']%>/<%=@params[:app_id]%>/arma3server -name=<%=@params[:hostname]%> -config=<%=@params[:cfg_file]%>
